{
  "name": "domtennis2k18",
  "title": "DOM Tennis 2k18",
  "version": "1.0.0",
  "description": "HTML + CSS + JavaScript tennis game",
  "main": "index.html",
  "scripts": {
    "build": "npm-run-all -l scaffold css js copy",
    "build:prod": "cross-env NODE_ENV=production npm-run-all -l clean scaffold lint css js minify",
    "clean": "del-cli dist/*",
	"scaffold": "make-dir dist/js",
    "copy": "copy-cli src/*.html dist/",
    "css": "postcss -d dist/css/ src/css/main.css",
    "js": "browserify -e src/js/main.js -t [ babelify ] -d | exorcist dist/js/main.js.map > dist/js/main.js",
    "lint": "npm-run-all -l lint:*",
    "lint:html": "htmlhint src/index.html",
    "lint:css": "stylelint src/css/*.css",
    "lint:js": "eslint src/js/**",
    "minify": "npm-run-all -l minify:* replace",
    "minify:html": "html-minifier -c .htmlminifierrc -o dist/index.html src/index.html",
    "minify:css": "cssnano dist/css/main.css dist/css/main.min.css --no-autoprefixer --no-calc",
    "minify:js": "uglifyjs -m -c -o dist/js/main.min.js dist/js/main.js",
    "replace": "replace \"\\.(css|js)\" \".min.$1\" dist/index.html -q",
    "watch": "run-p watch:*",
    "watch:html": "onchange \"src/index.html\" -- npm run copy",
    "watch:css": "onchange \"src/css/*.css\" -- npm run css",
    "watch:js": "onchange \"src/js/*.js\" -- npm run js",
    "start": "http-server dist/ -o --silent",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raohmaru/DOM-Tennis-2k18.git"
  },
  "keywords": [
    "game",
    "dom",
    "css"
  ],
  "author": {
    "name": "Raohmaru",
    "url": "https://twitter.com/raulparralejo"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raohmaru/DOM-Tennis-2k18/issues"
  },
  "homepage": "https://github.com/raohmaru/DOM-Tennis-2k18#readme",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "IE 11"
  ],
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babelify": "8.0.0",
    "browserify": "14.5.0",
    "copy": "0.3.1",
    "cross-env": "5.1.3",
    "cssnano": "3.10.0",
    "cssnano-cli": "1.0.5",
    "del": "3.0.0",
    "del-cli": "1.1.0",
    "eslint": "4.14.0",
    "eslint-config-standard": "11.0.0-beta.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-node": "5.2.1",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-standard": "3.0.1",
    "exorcist": "1.0.0",
    "html-minifier": "3.5.8",
    "http-server": "0.10.0",
    "make-dir-cli": "1.0.0",
    "npm-run-all": "4.1.2",
    "onchange": "3.3.0",
    "postcss": "6.0.14",
    "postcss-cli": "4.1.1",
    "postcss-cssnext": "3.0.2",
    "postcss-import": "11.0.0",
    "replace": "0.3.0",
    "stylelint": "8.4.0"
  },
  "dependencies": {}
}
